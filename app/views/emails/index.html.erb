<div class="flex flex-col max-w-4xl w-full mx-auto">
  <h1 class="text-3xl font-bold mb-2">Sent Emails</h1>
  <div class="self-end mb-4">
    <%= link_to "New Email", new_email_path, class: "bg-sky-600 text-white p-2 rounded hover:bg-sky-500 cursor-pointer" %>
  </div>
  <div class="flex gap-3">
    <div class="flex flex-col w-1/4">
      <% @emails.each do |email| %>
        <%= link_to email_path(email), data: { turbo_frame: "email-preview" } do %>
          <div class="border border-gray-300 rounded p-4 mb-2 hover:bg-sky-300">
            <div><%= email.subject %></div>
            <div><%= l(email.created_at, format: :short) %></div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="p-4 border border-gray-300 rounded w-3/4 h-screen">
      <%= turbo_frame_tag "email-preview" do %>
        Select email to preview
      <% end %>
    </div>
  </div>
</div>
